/* Write your global styles here in PostCSS syntax */
@import url('https://fonts.googleapis.com/css2?family=Play:wght@400;700&display=swap');
@tailwind base;
@tailwind components;
@tailwind utilities;

html,
body {
	font-family: 'Play', sans-serif;
	font-weight: 400;
	font-style: normal;
}

h1, h2, h3, h4, h5, h6 {
    font-weight: 700;
}

.text-faded {
    opacity: 0.7;
}

.btn-outline {
    @apply border-base-200;
}

.btn {
    @apply rounded-lg
}


